{
  "compilerOptions": {
    "module": "NodeNext",
    "rootDir": "src",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "express", "mongoose", "uuid", "body-parser", "cors", "dotenv", "morgan"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
